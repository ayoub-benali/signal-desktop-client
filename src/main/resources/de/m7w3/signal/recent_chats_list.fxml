<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>

<VBox minWidth="200.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.m7w3.signal.controller.ChatsListController">
    <children>
        <ScrollPane hbarPolicy="NEVER" minHeight="600.0" vbarPolicy="ALWAYS">
            <content>
                <ListView fx:id="chatsListView" minHeight="600.0" />
            </content>
        </ScrollPane>
        <ButtonBar prefHeight="40.0" >
            <buttons>
                <Button fx:id="newChatBtn" mnemonicParsing="false" text="New Chat" />
            </buttons>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </ButtonBar>
    </children>
</VBox>
